@import 'nib'

html
  background-color #C4D4F0

body
  background-color #f5f5f8
  border-radius 3px
  display flex
  fixed top 10px bottom 10px left 5px right 5px
  font-family 'Open sans', Arial, "Helvetica Neue", Helvetica, sans-serif
  margin 0 auto
  max-width 1024px
  padding 10px
  width 85%
  z-index 5

#container
  height 100%
  margin auto
  max-width 700px
  padding-bottom 50%
  position relative
  width 99%
  z-index -1
  .content
    height 100%
    overflow-y auto
    h2
      color #19C2F0
    h4
      color #1C223F
    .userList
      ul
        list-style none
        padding-left 10px
        li
          cursor pointer
          padding 5px 0
          margin 5px 0
          &:hover
            a
              text-decoration underline
          span
            color #1979F0
            margin-right 10px
    .userDetail
      position relative
      padding 1px
      .buttons
        display flex
        align-items flex-end
      .presentation
        display flex
        height 60px
        .img
          margin-top 5px
          border-radius 50%
          max-width 40px
        .img
        .titles
          position relative
          display inline-block
          height 40px
          min-width 40px
          width auto
        .titles
          margin-left 10px
          .age
          .name
            color #1C223F
            line-height 0
            left 0
            width auto
            vertical-align top
      .btn
        background-color #1FDA83
        border none
        border-radius 5px 10px
        color #fff
        cursor pointer
        font-family 'Roboto', Arial, "Helvetica Neue", Helvetica, sans-serif
        font-size 18px
        font-weight bold
        padding 8px 20px
        margin 2px 5px
        &.delete
          background-color #E85454
          margin-left 10px
      p
        color #495F5F
        font-size 15px
        font-weight normal
        font-family 'Montserrat', Arial, "Helvetica Neue", Helvetica, sans-serif
        span
          color #000
          font-weight bold
          letter-spacing .8px
      .userForm
        position relative
        label
        input
        textarea
          color #1C223F
          display block
          font-family 'Open Sans', Arial, "Helvetica Neue", Helvetica, sans-serif
          font-size 17px
          font-weight bold
          height 20px
          margin 12px 0
          max-width 90%
          width 90%
        input
        textarea
          border none
          border-radius 2px
          font-size 12px
          height 40px
          margin-top 0px
          padding 5px 10px
        textarea
          height 60px
